{
  "include": ["src", "tests", ".dumirc.ts", "*.ts"],
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "@/*": ["src"],
      "@datoou/components": ["src"],
      "@datoou/components/*": ["src/*", "*"]
    }
  }
}
